{
  "compilerOptions": {
    "jsx": "react",
    "skipLibCheck": true,
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "types": ["node","jest"],
    "lib": [
      "es2020",
      "dom"
    ],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "stripInternal": true,
    "declarationMap": true
  },
  "exclude": ["**/node_modules",  "**/lib"]
}

